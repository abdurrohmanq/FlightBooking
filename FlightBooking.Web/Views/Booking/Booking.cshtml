@using FlightBooking.Service.DTOs.Bookings;
@model BookingCreationDto

<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form asp-controller="Booking" asp-action="Create" method="post">

                                <div class="form-outline mb-4">
                                    <input asp-for="FlightId" type="text" class="form-control form-control-lg" value="@ViewData["FlightId"]" />
                                    <label asp-for="FlightId" class="form-label">Flight Id</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for=CustomerId type="text" class="form-control form-control-lg" />
                                    <label asp-for=CustomerId class="form-label">Customer Id</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for=NumberOfPassengers type="text" id="form3Example1cg" class="form-control form-control-lg" />
                                    <label asp-for=NumberOfPassengers class="form-label" for="form3Example1cg">Number Of Passanger</label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" asp-action="Create">
                                        Create
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <a href="#!"
                                                                class="fw-bold text-body"><u>Login here</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>