@using FlightBooking.Domain.Entities.Flights;
@model Flight

<section class="vh-100 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form asp-controller="Flights" asp-action="Edit" method="post">

                                <div class="form-outline mb-4">
                                    <input asp-for=DepartureCity type="text" class="form-control form-control-lg" />
                                    <label asp-for=DepartureCity class="form-label">Departure City</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for=ArrivalCity type="text" id="form3Example1cg" class="form-control form-control-lg" />
                                    <label asp-for=ArrivalCity class="form-label" for="form3Example1cg">Arrival City</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for=DepartureTime type="datetime-local" id="form3Example3cg" class="form-control form-control-lg" />
                                    <label asp-for=DepartureTime class="form-label" for="form3Example3cg">Departure Time</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for=ArrivalTime type="datetime-local" id="form3Example3cg" class="form-control form-control-lg" />
                                    <label asp-for=ArrivalTime class="form-label" for="form3Example3cg">Arrival Time</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for=Price type="number" id="form3Example4cg" class="form-control form-control-lg" />
                                    <label asp-for=Price class="form-label" for="form3Example4cg">Price</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for=AvailableSeats type="number" id="form3Example4cdg" class="form-control form-control-lg" />
                                    <label asp-for=AvailableSeats class="form-label" for="form3Example4cdg">Available Seats</label>
                                </div>
                                <div class="form-outline mb-4">
                                    <input asp-for=DepartureAirportId type="number" id="form3Example4cdg" class="form-control form-control-lg" />
                                    <label asp-for=DepartureAirportId class="form-label" for="form3Example4cdg">Available Seats</label>
                                </div>
                                <div class="form-outline mb-4">
                                    <input asp-for=ArrivalAirportId type="number" id="form3Example4cdg" class="form-control form-control-lg" />
                                    <label asp-for=ArrivalAirportId class="form-label" for="form3Example4cdg">Available Seats</label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" asp-action="Edit">
                                        Update
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <a href="#!"
                                                                class="fw-bold text-body"><u>Login here</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>